<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_width">0dp</item>
     	<item name="android:layout_weight">1</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:clickable">true</item>
    </style>
    
    
    <!-- top_bar -->
    <style name="top_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50.0dip</item>
    </style>
    <style name="top_bar_item">   
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">12.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
        <item name="android:src">@drawable/top_bar_site</item>
        <item name="android:background">@drawable/top_bar_item</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="top_bar_item_highlight" parent="top_bar_item">
        <item name="android:background">@color/item_bg_highlight_color</item>
    </style>
    
    
    <!--  site info -->
    <style name="button_back">
        <item name="android:layout_width">40.0dp</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_back</item>
    </style>
    <style name="site_info_topbg">
        <item name="android:layout_height">40.0dip</item>
        <item name="android:background">@color/item_bg_color</item>
    </style>
    <style name="site_info_text_border">
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/site_info_text_border</item>
    </style>
    <style name="site_info_label">
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="site_info_text">
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:background">@drawable/site_info_text</item>
        <item name="android:textColor">@color/item_bg_color</item>
    </style>
    <style name="button_save" parent="button">
        <item name="android:layout_weight">0</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="site_info_edit">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:src">@drawable/btn_blue_pen</item>
        <!-- <item name="android:background">@drawable/site_info_edit_btnbg</item> -->
    </style>
    <style name="site_info_delete" parent="site_info_edit">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginTop">6.5dp</item>
        <item name="android:layout_marginBottom">6.5dp</item>
        <item name="android:src">@drawable/btn_blue_trash</item>
    </style>
    <style name="label_gray">
        <item name="android:textColor">#666666</item>
    </style>
    
    
    <!--  task info -->
    <style name="task_info_text_right">
        <item name="android:layout_marginLeft">8dp</item>
    </style>
    <style name="task_info_text_border">
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="task_info_layout_border" parent="site_info_text_border">
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="task_info_repeat_button">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/task_info_repeat_button</item>
    </style>
    
    <!--  about info -->
	<style name="about_info_text_border">
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/about_info_text_border</item>
    </style>
    <style name="about_info_text_right">
        <item name="android:layout_marginLeft">13dp</item>
    </style>
</resources>